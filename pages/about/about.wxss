.main{
  padding: 25rpx;
}
.header{
    position: relative;
    height: 250rpx;
    line-height: 100rpx;
    padding:30rpx 30rpx 30rpx 30rpx;
    box-sizing: border-box;
    background: #72B2FC;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    box-shadow: 0 5rpx 4px 3px #72B2FC;
    margin-bottom: 25rpx;
}
.header .thumb{
    /* position: absolute;
    left: 30rpx;
    top: 30rpx; */
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.nickname{
  display: block;
  font-weight: bold;
}
.header .about{
    float: right;
}
.address-box{
    color: #999;
    line-height: 90rpx;
    font-size: 28rpx;
}
.address-box .address-manage{
    position: relative;
    height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
    text-align: center;
}
.address-box .address-manage::after, .list-box>navigator::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.address-box .address-list{
    padding-left: 30rpx;
}
.address-box .address-list view{
    height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.address-box .address-list view:last-child{
    border-bottom: 0;
}

.list-box{
    font-size: 28rpx;
}
.list-box>navigator{
  position: relative;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
    text-align: center;
}
.list-box:last-child{
    border-bottom: 0;
}

navigator {
  background: #fff;
  border-radius: 28rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 3rpx 4px 3px #DBD9DA;
}
.hide{
  display: none
}