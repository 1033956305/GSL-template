.company-infos{
  background: #fff;
  margin-bottom: 25rpx;
  height: 47%;
  overflow: scroll;
}
.company-infos>view{
  padding:12rpx 30rpx;
  border-bottom:3rpx solid #D5D5D5;
  color: #aaa;
}
.company-infos>.name{
  color: #1A3D91;
  border-bottom:6rpx solid #DADADA;
  min-height: 80rpx;
  line-height: 80rpx;
  font-size: 1.3rem;
}
image{
  width: 100%;
  height: 42%;
}
.button{
  position: fixed;
  bottom: 5rpx;
  width: 100%;
  margin-left: -50rpx;
}
.button>button{
  /* width: 44%; */
  /* display: inline-block; */
  box-shadow: 0 2rpx 4px 3px #DBD9DA;
}
.button>button:nth-child(2){
  background-color:#5FABFF;
  color: #fff;
  box-shadow: 0 2rpx 4px 3px #A0CBFB;
  margin-left: 30rpx;
}
.button>.blue{
  width: 90%;
  background-color:#5FABFF;
  color: #fff;
  box-shadow: 0 2rpx 4px 3px #A0CBFB;
  margin: 0 auto
}
.more{
  position: relative
}
.more::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.hide{
  display: none
}
.content{
  color: #aaa;
  font-size: 0.8rem;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
}
.header{
  text-align: center;
}
.section{
  font-size: 0.8rem
}
.body{
  background: #fff;
  margin: 70rpx 20rpx;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 3rpx 4px 3px #DBD9DA;
}
.body>view{
  color: #ADADAD;
  font-size: 1rem;
}
.body>view.header{
  color: #000;
  font-size: 1.3rem;
  margin-bottom: 25rpx;
}