/* pages/order/order.wxss */
.header{
  background:#fff;
  font-size:0.7rem;
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}
.list-item{
  display: flex;
  justify-content: flex-start;
  background: #fff;
  border-bottom: 5rpx solid #F5F6F5;
  padding: 10rpx 30rpx 10rpx 0;
  margin: 25rpx;
}
.header>view{
  height:50rpx;
  width: 21%;
  text-align: center;
  line-height:50rpx;
}
.chosed{
  border-bottom: 3rpx solid red
}
.list-item>image{
  width: 200rpx;
  height: 140rpx;
  margin-left: 20rpx;
}
.detail>text{
  color: #aaa;
  font-size: 0.7rem
}
.detail{
  margin-top: 35rpx;
  line-height: 0.7rem;
}
.item-content{
  width: 500rpx;
  margin-left: 20rpx;
}
.state{
  float: right;
}
.noInfo{
  text-align: center;
  font-size: 0.7rem;
  color: #666;
}
.hide{
  display: none
}
.others{
  display: none
}
.header-order>view{
  font-size: 0.9rem;
}