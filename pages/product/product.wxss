.product-infos{
  background: #fff
}
.product-infos>view{
  padding:15rpx 30rpx;
  border-bottom:3rpx dashed #000;
  color: #aaa;
}
.product-infos>.name{
  color: #000;
}
image{
  width: 100%
}
.button{
  position: fixed;
  bottom: 0rpx;
  width: 100%
}
.button>button{
  width: 50%;
  display: inline-block;
}
.button>button:nth-child(2){
  background-color:#f47920;
  color: #fff
}
.more{
  position: relative
}
.more::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}