.body{
  background:#fff;
  margin:50rpx;
  padding:20rpx;
}
.more::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.more{
  position: relative;
  padding:15rpx;
  border:3rpx solid #F5F6F5;
  width:95%;
  margin:0 auto;
  border-radius: 25rpx;
  box-shadow: 0 5rpx 2px 1px #DBD9DA;
}
textarea{
  border: 3rpx solid #F5F6F5;
  width: 100%;
  box-sizing: border-box;
  padding: 15rpx;
  border-radius: 25rpx;
  box-shadow: 0 5rpx 2px 1px #dbd9da;
}
.text{
  width:100%;
  margin:0 auto;
  margin-top: 25rpx;
}
.btn{
  width: 95%;
  margin: 0 auto;
  background-color:#5FABFF;
  color:#fff;
  border-radius: 25rpx;
}
.toEvaluate{
  position:fixed;
  width:100%;
  bottom:20rpx;
}
.hide{
  display: none
}